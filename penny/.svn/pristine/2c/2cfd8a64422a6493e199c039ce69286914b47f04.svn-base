obstacle_range: 2.0
raytrace_range: 2.0
footprint: [[0.3,0.3], [0.45,0], [0.3,-0.3], [-0.3,-0.3], [-0.3,0.3]]
#robot_radius: 0.35
#changed
inflation_radius: 0.2 

plugin:
- {name: obstacle_layer, type: "costmap_2d::ObstacleLayer"}
- {name: inflation_layer, type: "costmap_2d::InflationLayer"}
obstacle_layer:
  observation_sources: laser_scan_sensor
  laser_scan_sensor: {data_type: LaserScan, sensor_frame: laser, topic: base_scan, expected_update_rate: 0.4, observation_persistence: 0.0, marking: true, clearing: true, max_obstacle_height: 0.6, min_ostacle_height: 0.0, inf_is_valid: true}

